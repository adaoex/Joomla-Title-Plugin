<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="content">
	<name>plg_content_title</name>
	<author>Henrik Hussfelt</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2011 Migur Ltd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>henrik@migur.com</authorEmail>
	<authorUrl>www.migur.com</authorUrl>
	<version>1.0</version>
	<description>PLG_CONTENT_TITLE_XML_DESCRIPTION</description>

	<files>
		<filename plugin="title">title.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_title.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_title.sys.ini</language>
	</languages>

	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="changeHome" type="list"
					description="PLG_CONTENT_TITLE_CHANGE_HOME_DESC"
					label="PLG_CONTENT_TITLE_CHANGE_HOME_LABEL" default="0">
					<option value="0">PLG_CONTENT_TITLE_NO</option>
					<option value="1">PLG_CONTENT_TITLE_YES</option>
				</field>
				<field name="showHome" type="list"
					description="PLG_CONTENT_TITLE_SHOW_HOME_DESC"
					label="PLG_CONTENT_TITLE_SHOW_HOME_LABEL">
					<option value="0">PLG_CONTENT_TITLE_NO</option>
					<option value="1">PLG_CONTENT_TITLE_YES</option>
				</field>
				<field name="homeText" type="text" label="PLG_CONTENT_TITLE_HOME_TEXT_LABEL" description="PLG_CONTENT_TITLE_HOME_TEXT_DESC" />
				<field name="titleDivider" type="text" label="PLG_CONTENT_TITLE_DIVIDER_LABEL" description="PLG_CONTENT_TITLE_DIVIDER_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>